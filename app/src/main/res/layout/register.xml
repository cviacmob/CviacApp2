<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <WebView
        android:id="@+id/textContent"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true" />


       <EditText
            android:id="@+id/editTextphnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textContent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="81dp"
            android:ems="10"
            android:hint="Phone number"
            android:textColor="@android:color/black"
            android:textColorHint="#3A3733" >
        </EditText>

       <Button
           android:id="@+id/buttonext"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/textContent"
           android:layout_centerHorizontal="true"
           android:text="Next" 
           android:background="#706E6E"/>

       <TextView
           android:id="@+id/textmayappy"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/buttonext"
           android:layout_centerHorizontal="true"
           android:text="Carrier SMS charges may apply" 
             android:textColor="#3B3D3C"/>

</RelativeLayout>