<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/actionbarTitle"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="#F0F7F6"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/imageViewcustom"
        android:layout_toEndOf="@+id/imageViewcustom"
        android:layout_marginLeft="0.30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="11dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/back"
        android:id="@+id/imageViewback"
        android:padding="2dp"
        android:layout_marginLeft="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageViewcustom"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_launcher"
        android:layout_weight="0.06"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="28dp"
        android:layout_alignBottom="@+id/imageViewback"
        android:layout_alignLeft="@+id/imageViewback"
        android:layout_alignStart="@+id/imageViewback" />


</RelativeLayout>