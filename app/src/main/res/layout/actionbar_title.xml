<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/actionbarTitle"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textColor="#F0F7F6"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/imageViewcustom"
        android:layout_toEndOf="@+id/imageViewcustom"
        android:layout_marginLeft="0.30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="11dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/back"
        android:id="@+id/imageViewback"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="63dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/actionbarTitle"
        android:layout_toStartOf="@+id/actionbarTitle" />

    <ImageView
        android:id="@+id/imageViewcustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_weight="0.06"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="125dp"
        android:layout_centerVertical="true"
  />


</RelativeLayout>